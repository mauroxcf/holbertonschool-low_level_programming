#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * *_strdup - prints buffer in hexa
 * @str: the size of the memory to print
 *
 * Return: Nothing.
 */

char *str_concat(char *s1, char *s2)
{

int a;
char *ptr;
int b;
int c;
int d;

if (!s1)
  {
    return ("");
  }
if (!s2)
  {
    return ("");
  }

 for (a = 0; s1[a] != '\0'; a++)
   ;
 for (b = 0; s2[b] != '\0'; b++)
   ;
 ptr = malloc ((a * sizeof(s1)) + (b * sizeof(s2)) + 1));
	       {
	       if (!ptr)
		 {
		   return (NULL);
		     }
	       }
 for (c = 0, d = 0; c < (a + b + 1); c++)
   {
     if ( c < a)
       {
	 ptr[c] = s1[c];
       }
     else
       ptr[c] = s2[d++];
  }
return (ptr);
}
